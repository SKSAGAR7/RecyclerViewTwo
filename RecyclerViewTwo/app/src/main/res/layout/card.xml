<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:background="#fff"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/veg_noodles"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:padding="5dp"

                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtDish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Veg Noodles"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Noodles" />

                            <TextView
                                android:id="@+id/txtRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:text="Rating for this Dish" />

                            <TextView
                                android:id="@+id/txtPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ Price" />
                        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_weight="3"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/add"
                android:text="ADD +"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:textColor="#C41C1C"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="customisable"
                android:textColor="#F5C469"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>